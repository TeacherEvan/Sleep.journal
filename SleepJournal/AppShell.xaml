<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SleepJournal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SleepJournal"
    xmlns:views="clr-namespace:SleepJournal.Views"
    Title="Sleep Journal"
    FlyoutBehavior="Flyout">

    <!-- Flyout Menu Items -->
    <FlyoutItem Title="Journal"
            Icon="home.png">
        <ShellContent
            Title="New Entry"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage"/>
    </FlyoutItem>

    <FlyoutItem Title="Statistics"
            Icon="chart.png">
        <ShellContent
            Title="Analytics"
            ContentTemplate="{DataTemplate views:StatisticsPage}"
            Route="StatisticsPage"/>
    </FlyoutItem>

    <FlyoutItem Title="History"
            Icon="list.png">
        <ShellContent
            Title="View Entries"
            ContentTemplate="{DataTemplate views:HistoryPage}"
            Route="HistoryPage"/>
    </FlyoutItem>

    <FlyoutItem Title="Settings"
            Icon="settings.png">
        <ShellContent
            Title="Preferences"
            ContentTemplate="{DataTemplate views:SettingsPage}"
            Route="SettingsPage"/>
    </FlyoutItem>

</Shell>
